<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:max="100"
            android:progress="25" />

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/circle_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="150dp"
            custom:circle_progress="0"
            android:onClick="SendEmailtestMio"/>

        <TextView
            android:id="@+id/valorseekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="0%"
            android:textSize="50dp" />
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/emailtosendtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email to notify" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/emailtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="enter your email!!!" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/srntosendtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SRN" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/srntext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="enter your SRN of this MR!!" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/hospnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Name" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/hospnameedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="enter the name of this MR!!!" />


        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chooseapptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the app to get notify data" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/radioButtonhangout"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonsms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SMS" />

                <RadioButton
                    android:id="@+id/radioButtonWhatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WHATSAPP" />

                <RadioButton
                    android:id="@+id/radioButtonTelegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TELEGRAM" />

                <RadioButton
                    android:id="@+id/radioButtonhangout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HANGOUT" />
                <RadioButton
                    android:id="@+id/radioButtonotros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OTHER" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/otrapptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter other app package name" />

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/otherapppackagename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter other app packagename" />


            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>